# Configuration de la base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=immotech

# Clé secrète pour Flask (générez une clé sécurisée pour la production)
SECRET_KEY=your_secret_key_here_change_this_in_production

# Configuration du serveur (optionnel)
FLASK_ENV=development
FLASK_DEBUG=True

# Configuration des emails (optionnel, pour les notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Configuration des uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=static/uploads

# Configuration du chatbot (optionnel)
CHATBOT_ENABLED=True
CHATBOT_MODEL_PATH=models/chatbot_model.pkl 